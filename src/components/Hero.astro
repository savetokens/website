<section class="min-h-screen flex items-center justify-center px-4 py-20 pt-32">
  <div class="max-w-6xl mx-auto text-center">
    <!-- Logo -->
    <div class="mb-8 flex justify-center">
      <img
        src="/icon.png"
        alt="SaveTokens Logo"
        class="w-24 h-24 md:w-32 md:h-32 rounded-2xl dark:brightness-90 dark:contrast-110"
      />
    </div>

    <!-- Main Headline -->
    <h1 class="text-5xl md:text-7xl font-bold mb-6 bg-gradient-to-r from-gray-900 to-gray-600 dark:from-gray-100 dark:to-gray-400 bg-clip-text text-transparent">
      Rescue Tokens from<br />Inefficient Formats
    </h1>

    <!-- Subheadline -->
    <p class="text-xl md:text-2xl text-gray-600 dark:text-gray-400 mb-4 max-w-3xl mx-auto">
      Building the future of efficient LLM communication
    </p>

    <!-- Description -->
    <p class="text-lg md:text-xl text-gray-500 dark:text-gray-500 mb-12 max-w-2xl mx-auto">
      Every token matters. We create tools that help you preserve context,<br />
      reduce costs, and maximize LLM performance.
    </p>

    <!-- CTA Buttons -->
    <div class="flex flex-col sm:flex-row gap-4 justify-center items-center mb-16">
      <a
        href="#mission"
        class="px-8 py-4 bg-gray-900 dark:bg-gray-100 text-white dark:text-gray-900 rounded-lg font-semibold hover:bg-gray-800 dark:hover:bg-gray-200 transition-all duration-200 transform hover:scale-105 shadow-lg"
      >
        Our Mission
      </a>
      <a
        href="/axon"
        class="px-8 py-4 bg-white dark:bg-gray-800 text-gray-900 dark:text-gray-100 border-2 border-gray-900 dark:border-gray-100 rounded-lg font-semibold hover:bg-gray-50 dark:hover:bg-gray-700 transition-all duration-200"
      >
        Explore AXON
      </a>
    </div>

    <!-- Scroll Indicator -->
    <div class="mt-16 animate-bounce">
      <svg
        class="w-6 h-6 mx-auto text-gray-400"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M19 14l-7 7m0 0l-7-7m7 7V3"
        ></path>
      </svg>
    </div>
  </div>
</section>
